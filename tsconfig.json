{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib",
        "strict": true,
        "rootDir": "src",
        "sourceMap": false,
        "declaration": true,
        "types": [
            "@types/node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
